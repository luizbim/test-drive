{
  "name": "docker-build",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/docker-build/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/docker-build",
        "main": "tools/docker-build/src/index.ts",
        "tsConfig": "tools/docker-build/tsconfig.lib.json",
        "assets": [
          "tools/docker-build/*.md",
          {
            "input": "./tools/docker-build/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/docker-build/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/docker-build",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/docker-build",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/docker-build/jest.config.ts"
      }
    }
  }
}
